    "dotenv": "^16.0.3",
    "express-handlebars": "^5.3.5",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.9",
    "nestjs-url-generator": "^1.0.2",
    "nestjs-winston-logger": "^1.1.11",
    "node-ipinfo": "^3.1.1",
    "nodemailer": "^6.7.8",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "qs": "^6.11.0",
    "react-scripts": "^5.0.1",
    "reflect-metadata": "^0.1.13",
